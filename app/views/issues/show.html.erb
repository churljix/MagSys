<div class="page-header">
  <%= link_to magazine_issues_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_magazine_issue_path(@magazine, @issue), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show issue</h1>
</div>

<dl class="dl-horizontal">
  <dt>Magazine:</dt>
  <dd><%= @magazine.title %></dd>

  <dt>Number:</dt>
  <dd><%= @issue.number %></dd>

  <dt>Date:</dt>
  <dd><%= @issue.date %></dd>

  <dt>Due date:</dt>
  <dd><%= @issue.due_date %></dd>

  <dt>Status:</dt>
  <dd><%= @issue.status %></dd>

</dl>
