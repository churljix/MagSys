<div class="page-header">
  <%= link_to new_magazine_issue_path(@magazine.id), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Issue
  <% end %>
  <%= link_to magazines_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-chevron-left"></span>
    Show Magazines
  <% end %>
  <h1>Listing issues</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Magazine</th>
            <th>Number</th>
            <th>Date</th>
            <th>Due date</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @issues) do |issue| %>
            <td><%= issue.magazine.title %></td>
            <td><%= issue.number %></td>
            <td><%= issue.date %></td>
            <td><%= issue.due_date %></td>
          <td><%= link_to 'Show Fields', magazine_issue_fields_path(@magazine, issue) %></td>
        <td><%= link_to 'Edit', edit_magazine_issue_path(@magazine, issue) %></td>
        <td><%= link_to 'Destroy', magazine_issue_path(@magazine, issue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
  <center>
  <%= will_paginate @issues, :class=> "pagination pagination-sm", renderer: BootstrapPagination::Rails %>
  </center>
</div>
