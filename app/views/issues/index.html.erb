<div class="page-header">
  <%= link_to new_issue_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Issue
  <% end %>
  <h1>Listing issues</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Magazine</th>
            <th>Number</th>
            <th>Date</th>
            <th>Due date</th>
            <th>Status</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @issues) do |issue| %>
      <% @magazine = Magazine.find(issue.magazine_id) %>
            <td><%= @magazine.title %></td>
            <td><%= issue.number %></td>
            <td><%= issue.date %></td>
            <td><%= issue.due_date %></td>
            <td><%= issue.status %></td>
            <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
