<%= form_for([@magazine, @issue], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @issue.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h4>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.number_field :magazine_id, :class => "hidden form-control", :value => @magazine.id %>
  <%= f.text_field :status, :class => "hidden form-control", :value => 'Y' %>

  <div class="form-group">
    <%= f.label :magazine_title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :magazine_title, :class => "form-control", :disabled => 'disabled', :value => @magazine.title %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :number, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :number, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date, 'data-behaviour' => 'datepicker', :class => "form-control datepicker" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :due_date, 'data-behaviour' => 'datepicker', :class => "form-control datepicker" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
