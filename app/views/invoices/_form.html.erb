<%= form_for(@invoice, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @invoice.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h4>

      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :status, :class => "hidden form-control", :value => 'S' %>

  <div class="form-group">
    <%= f.label :total, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <% if params[:total].nil? %>
      <%= f.number_field :total, :class => "form-control" %>
    <% else %>
      <%= f.number_field :total, :class => "form-control" , :value => params[:total] %>
    <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :due_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contract_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <% if params[:contract_id].nil? %>
      <%= f.collection_select :contract_id, @contracts, :id, :id, {}, :class => "form-control" %>
    <% else %>
      <%= f.number_field :contract_id, :class => "form-control", :disabled => 'disabled', :value => params[:contract_id] %>
    <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :note, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :note, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
