<%= form_for(@contract, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @contract.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@contract.errors.count, "error") %> prohibited this contract from being saved:</h4>

      <ul>
      <% @contract.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :status, :class => "hidden form-control", :value => 'Y' %>

  <div class="form-group">
    <%= f.label :agency_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select( :agency_id, @agencies, :id, :title, {}, :class => 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date, 'data-behaviour' => 'datepicker', :class => "form-control datepicker" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discount, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :discount, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :notes, :class => "form-control" %>
    </div>
  </div>

      <%= f.number_field :user_id,  :class => "hidden form-control", :value => session[:user_id] %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>

<% end %>
