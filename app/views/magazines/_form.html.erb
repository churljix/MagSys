<%= form_for(@magazine, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @magazine.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@magazine.errors.count, "error") %> prohibited this magazine from being saved:</h4>

      <ul>
      <% @magazine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :status, :class => "hidden form-control", :value => 'Y' %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :issue, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :issue, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prints, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :prints, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subscribers, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :subscribers, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :readership, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :readership, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :picture, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
