<div class="page-header">
  <%= link_to magazines_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_magazine_path(@magazine), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @magazine.title %> magazine</h1>
</div>

<%= image_tag @magazine.picture, :class => 'col-md-3' %>

<dl class="dl-horizontal col-md-1">
  <dt>Issues:</dt>
  <dd><%= @magazine.issue %></dd>

  <dt>Prints:</dt>
  <dd><%= @magazine.prints %></dd>

  <dt>Subscribers:</dt>
  <dd><%= @magazine.subscribers %></dd>

  <dt>Readership:</dt>
  <dd><%= @magazine.readership %></dd>
</dl>
