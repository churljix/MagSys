<div class="page-header">
  
  <% if is_power %>
    <%= link_to new_order_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Order
    <% end %>
    <h1>Listing orders</h1>
  <% else %>
    <h1><span class="glyphicon glyphicon-shopping-cart"></span>  Your cart </h1>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Magazine</th>
            <th>Issue</th>
            <th>Field</th>
            <th>Client</th>
            <th>User</th>
            <th>Contract number</th>
            <th>Title</th>
            <th>Notes</th>
            <th>Price</th>
            <!-- <th>Remaining</th> -->
            <!-- <th>Special</th> -->
            <!-- <th></th> -->
<!--         <th></th>
        <th></th>
        <th></th> -->
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orders) do |order| %>
            <td><%= order.field.magazine.title %></td>
            <td><%= Date::MONTHNAMES[order.issue.date.strftime("%-m").to_i] %> #<%= order.issue.number %></td>
            <td><%= order.field.title %></td>
            <td><% if order.client_id == 0 %> <% else %> <%= order.client.title %><% end %></td>
            <td><%= order.user.username %></td>
            <td><%= order.contract_id %></td>
            <td><%= order.title %></td>
            <td><%= order.notes %></td>
            <td><%= order.total_amount %></td>
            <!-- <td><%= order.remaining %></td> -->
            <!-- <td><%= order.special %></td> -->
            <!-- <td><%= link_to 'Show', order %></td> -->
            <td>
            <%= form_for(order, :html => { :class => "form-horizontal" }) do |t| %>
               <%= t.hidden_field :status, :value=>"S" %>
               <%= t.submit "Send for Review" %>
             <% end %>
            </td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
