<%= form_for(@order, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @order.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if is_power %>
  <%= f.text_field :status, :class => "hidden form-control", :value => 'S' %>
    <div class="form-group">
      <%= f.label :issue_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :issue_id, @issues, :id, :number_and_magazine_id, {:prompt   => "Select issue"}, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :field_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :field_id, @fields, :id, :title, {:prompt   => "Select field"}, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :client_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :client_id, @clients, :id, :title, {:prompt   => "Select client"}, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :user_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :user_id, @users, :id, :username, {:prompt   => "Select user"}, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :contract_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :contract_id, @contracts, :id, :id, {:prompt   => "Select contract"}, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :title, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :notes, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :notes, :class => "form-control", :maxlength => 500 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :total_amount, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :total_amount, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :special, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :special, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
  <% else %>
    <%= f.text_field :status, :class => "hidden form-control", :value => 'P' %>
    <div class="form-group">
      <%= f.label :client_id, :class => "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <%= f.collection_select :client_id, @clients, :id, :title , {}, :class => "form-control" %>        
      </div>
      <%= link_to new_client_path, :class => 'btn btn-link' do %>Add client <% end %>
    </div>
    <div class="form-group">
      <%= f.label :title, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :notes, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :notes, :class => "form-control", :maxlength => 500 %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
