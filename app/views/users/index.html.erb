<div class="page-header">
  <% if !is_power and session[:user_id].nil? %>

    <%= link_to new_user_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New User
    <% end %>
  <% end %>
  <%= link_to admin_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-chevron-left"></span>
    Admin CP
  <% end %>
  <h1>Listing users</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Agency</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @users) do |user| %>
            <td><%= user.username %></td>
            <td><%= user.name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.agency.title %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
  <center>
  <%= will_paginate @users, :class=> "pagination pagination-sm", renderer: BootstrapPagination::Rails %>
  </center>
</div>
