<div class="page-header">
  <%= link_to new_payment_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Payment
  <% end %>
  <%= link_to admin_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-chevron-left"></span>
    Admin CP
  <% end %>
  <h1>Listing payments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Invoice</th>
            <th>Amount</th>
            <th>Date</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @payments) do |payment| %>
            <td><%= payment.invoice_id %></td>
            <td><%= payment.amount %></td>
            <td><%= payment.date %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
