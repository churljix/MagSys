<div class="page-header">
  <% if is_power %>
    <%= link_to new_payment_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Payment
    <% end %>  
    <%= link_to admin_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-chevron-left"></span>
      Admin CP
    <% end %>
  <% end %>
  <h1>Listing payments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Invoice number</th>
            <th>Amount</th>
            <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @payments) do |payment| %>
            <td><%= payment.invoice_id %></td>
            <td><%= payment.amount %></td>
            <td><%= payment.date %></td>
      <% end %>
    </tbody>
  </table>
  <center>
  <%= will_paginate @payments, :class=> "pagination pagination-sm", renderer: BootstrapPagination::Rails %>
  </center>
</div>
