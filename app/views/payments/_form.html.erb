<%= form_for(@payment, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @payment.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h4>

      <ul>
      <% @payment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :invoice_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :invoice_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :amount, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :date, 'data-behaviour' => 'datepicker', :class => "form-control datepicker" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
