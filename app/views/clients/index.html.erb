<div class="page-header">
  <%= link_to new_client_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Client
  <% end %>
  <%= link_to admin_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-chevron-left"></span>
    Admin CP
  <% end %>
  <h1>Listing clients</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Reg number</th>
            <th>Phone</th>
            <th>Contact</th>
            <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clients) do |client| %>
            <td><%= client.title %></td>
            <td><%= client.reg_number %></td>
            <td><%= client.phone %></td>
            <td><%= client.contact %></td>
            <td><%= client.email %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
