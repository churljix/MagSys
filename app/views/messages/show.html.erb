<div class="page-header">
  <%= link_to messages_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_message_path(@message), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show message</h1>
</div>

<dl class="dl-horizontal">
  <dt>Sender:</dt>
  <dd><%= @message.sender_id %></dd>

  <dt>Recipient:</dt>
  <dd><%= @message.recipient_id %></dd>

  <dt>Text:</dt>
  <dd><%= @message.text %></dd>

  <dt>Status:</dt>
  <dd><%= @message.status %></dd>

  <dt>Visible:</dt>
  <dd><%= @message.visible %></dd>

</dl>
