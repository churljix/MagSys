<%= form_for(@message, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @message.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h4>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sender_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :sender_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recipient_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :recipient_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :text, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :text, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :status, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :visible, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :visible, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
